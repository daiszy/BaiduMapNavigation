<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaoxixi.mapmutilnavigation.Activity.RegisterActivity">

    <TableLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="昵称:"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/nickName"
                android:hint="请输入昵称"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="姓名:"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/name"
                android:hint="请输入姓名"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"/>
        </TableRow>>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="性别:"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                />
            <RadioGroup
                android:id="@+id/rgSex"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/sexFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="女"/>
                <RadioButton
                    android:id="@+id/sexMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"/>
            </RadioGroup>>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="手机号:"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/telphone"
                android:hint="请输入手机号"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="所在城市:"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/ofCity"
                android:hint="请输入所在城市"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="密码:"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/password"
                android:hint="请输入密码"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:inputType="numberPassword"/>
        </TableRow>
    </TableLayout>>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/colorRed"
        android:textSize="14pt"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAzure">
    </Button>
</RelativeLayout>
