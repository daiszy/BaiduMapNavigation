<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mutil_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.gaoxixi.mapmutilnavigation.Activity.MutilNavigation">

    <!--<ScrollView-->
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:id="@+id/mutil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--起点布局-->
            <LinearLayout
                android:id="@+id/mutil_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/mutil_start_icon"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/position_icon"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/mutil_start_text"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="8"
                    android:text="西安理工大学"/>
                <ImageView
                    android:id="@+id/mutil_start_delete"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!--中间布局-->
            <!--<include layout="@layout/mutil_navigation_list_item"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--/>-->
            <include layout="@layout/mutil_navigation_list"/>
            <!--结尾布局-->
            <LinearLayout
                android:id="@+id/mutil_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/mutil_end_icon"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:src="@drawable/position_icon"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/mutil_end_text"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:layout_weight="8"
                    android:text="西安火车站"/>
                <ImageView
                    android:id="@+id/mutil_end_add"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/add"/>
            </LinearLayout>
        </LinearLayout>
    <!--</ScrollView>-->


    <Button
        android:id="@+id/mutil_navigation_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBlue"
        android:layout_alignParentBottom="true"
        android:text="导航"
        android:textSize="14pt"/>
</RelativeLayout>
